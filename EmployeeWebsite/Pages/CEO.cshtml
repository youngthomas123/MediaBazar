@page
@model EmployeeWebsite.Pages.CEOModel
@{
	ViewData["Title"] = "Stats";
}
<h1>Quota of sold items for this month</h1>
<h3>Keyboards:</h3>
<div class="progress">
    <div class="progress-bar bg-success" role="progressbar" style="width: @Model.AttendancePercentage%" aria-valuenow="@Model.AttendancePercentage" aria-valuemin="0" aria-valuemax="100"></div>
</div>
@*Line chart code*@
<html>
<head>
    <style>
        #sampleChart {
            max-width: 550px;
            height: 300px;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
    </script>
</head>
<body>
    <h2> Item sales this month</h2>
    <canvas id="sampleChart"> </canvas>
    <div id="output"> </div>
    <script>
        let output = document.getElementById('output');
        let canvas = document.getElementById("sampleChart");
        let line1Data = [20, 10, 30, 40, 60, 70, 100, 120, 220, 200];
        let line2Data = [10, 5, 20, 25, 60, 55, 47, 80, 100, 30, 55];
        let line3Data = [30, 40, 50, 60, 70, 80, 90, 100, 102, 34];
        var xValues = [20, 40, 60, 80, 100, 120, 140, 160, 180, 200, 220, 240, 260, 280, 300];
        new Chart(canvas, {
            type: "line",
            data: {
                labels: xValues,
                datasets: [{
                    borderColor: "red",
                    pointBackgroundColor: "green",
                    fill: false,
                    data: line1Data,
                    label: "Fridges"
                }, {
                    borderColor: "yellow",
                    pointBackgroundColor: "blue",
                    fill: false,
                    data: line2Data,
                    label: "TVs"
                }, {
                    borderColor: "black",
                    pointBackgroundColor: "pink",
                    fill: false,
                    data: line3Data,
                    label: "Keyboards"
                }]
            },
            options: {
                scales: {
                    xAxes: [{ ticks: { min: 5, max: 300 } }],
                    yAxes: [{ ticks: { min: 5, max: 300 } }],
                }
            }
        });
    </script>
</body>
</html>
